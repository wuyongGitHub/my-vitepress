{
  "name": "vuecomp-starter",
  "version": "0.0.1",
  "author": "windlil<windlil@outlook.com>",
  "description": "开源的组件库开发起始模板，帮助以最轻松的方式搭建功能完善的Vue3组件库，让使用者只需关注到组件的开发，无需关注繁琐的搭建配置。",
  "keywords": [
    "components",
    "Vue3",
    "ui"
  ],
  "type": "module",
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "types": "dist/lib/index.d.ts",
  "exports": {

  },
  "scripts": {
    "build": "gulp -f packages/script/build/index.ts",
    "component:create": "esno ./utils/create/index.ts",
    "comp:create": "esno ./utils/createComponent/index.ts",
    "comp:play": "pnpm run -C playground/vue-vite-playground dev",
    "comp:new": "esno ./utils/createTestVue/index.ts",
    "docs:dev": "vitepress dev docs --port 8000",
    "docs:new": "esno ./utils/createVitepressComp/index.ts",
    "docs:build": "vitepress build docs"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/gulp": "^4.0.16",
    "@types/gulp-autoprefixer": "^0.0.36",
    "@types/gulp-less": "^0.0.35",
    "@types/gulp-sass": "^5.0.3",
    "@types/node": "^20.8.7",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "esno": "^0.17.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-less": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "less": "^4.2.0",
    "sass": "^1.69.4",
    "sucrase": "^3.34.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitepress": "1.0.0-rc.24",
    "vue": "^3.3.4"
  }
}
